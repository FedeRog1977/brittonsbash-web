{
  "name": "root",
  "description": "This is the root package of brittonsbash, which orchestrates all other packages",
  "private": true,
  "scripts": {
    "bootstrap": "husky install && pnpm install",
    "serial": "pnpm --recursive --stream --filter",
    "serial:all": "pnpm --recursive --stream",
    "parallel": "pnpm --recursive --stream --parallel --filter",
    "parallel:all": "pnpm --recursive --stream --parallel"
  },
  "dependencies": {
    "pnpm": "8.6.0"
  },
  "devDependencies": {
    "husky": "8.0.3"
  }
}
